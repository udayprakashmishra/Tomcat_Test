pipeline {
  agent any
  stages {
    stage('Build Application') {
      scm {
        github('https://github.com/udayprakashmishra/Tomcat_Test.git', 'main')
      }

      triggers {
        scm("* * * * *")
      }
      steps {
        maven('clean package')
      }
      publishers {
        archiveArtifacts('**/*.jar')
      }

      post {
        success {
          echo "Now Archiving the Artifacts...."
        }
      }
    }
  }

}

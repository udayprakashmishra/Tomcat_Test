pipeline {
  agent any
  stages {
    
      stage('Build Application') {
            steps {
               cmd.exe /C 'C:\Users\apache-maven-3.5.4\bin\mvn.cmd clean package'
            }
            post {
                success {
                    echo "Now Archiving the Artifacts...."
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }
      
  }
}
